   "source": [
    "# Natural Number using Recursion"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Enter a Number: 45\n",
      "The sum is:  1035\n"
     ]
    }
   ],
   "source": [
    "num = int(input('Enter a Number: '))\n",
    "\n",
    "def rec_sum(n):\n",
    "    if n <= 1:\n",
    "        return n\n",
    "    else:\n",
    "        return n + rec_sum(n -1)\n",
    "    \n",
    "    \n",
    "if num < 0:\n",
    "    print(\"Enter a Positive Number\")\n",
    "else:\n",
    "    print(\"The sum is: \", rec_sum(num))\n",
    "    "
   ]
